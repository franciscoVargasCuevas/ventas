@model List<PACO.Models.ViewModels.ArticuloViewModel>
@{
    ViewBag.Title = "Articulos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Código</td>
                    <td>Descripción</td>
                    <td>Precio</td>
                    <td>Imagen</td>
                    <td>Stock</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.id</td>
                    <td>@item.codigo</td>
                    <td>@item.descripcion</td>
                    <td>@item.precio</td>
                    <td>@item.imagen</td>

                    <td>@item.stock</td>
                    <td>
                        <a class="btn btn-primary" href="~/Articulo/Editar/@item.id">Editar</a>
                        <a class="btn btn-danger" href="~/Articulo/Eliminar/@item.id">Eliminar</a>
                    </td>
                </tr>
                }

            </tbody>
        </table>
        <div class="row flex-xxl-grow-1">
            <a href="~/Articulo/Nuevo" class="btn btn-primary">NUEVO REGISTRO</a>
        </div>
    </div>


</div>
